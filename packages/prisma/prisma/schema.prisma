generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userid String @id @default(uuid())
  fullname String
  email String @unique
  lastOnline DateTime @default(now())
  createdAt DateTime @default(now())
  AdminGroups Groups[] @relation("AdminGroups")
  memberships Memberships[]
  messages Messages[]
}

model Groups{
  groupid String @id @default(uuid())
  groupName String
  About String
  Admin Users @relation("AdminGroups",fields: [adminId],references: [userid])
  adminId String
  messages Messages[]
  members Memberships[]
  lastMessage DateTime @default(now())
  isPrivate Boolean @default(false)
}

model Memberships{
  membershipid String @default(uuid())
  joinedAt DateTime @default(now())
  member Users @relation(fields: [userid],references: [userid])
  userid String
  Group Groups @relation(fields: [groupid],references: [groupid])
  groupid String
  @@id([userid,groupid])
}

model Messages {
  messageid String @id @default(uuid())
  content String
  time DateTime @default(now())
  group Groups @relation(fields: [groupid],references: [groupid])
  groupid String
  author Users @relation(fields: [authorid],references: [userid])
  authorid String
}

